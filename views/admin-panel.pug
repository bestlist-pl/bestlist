.app
  include includes/navbar
  include includes/admin-panel-server
  .content
    .row
      .col-12.col-lg-4.mb-m
        .card
          img.rounded-circle.img-fluid(src=user.avatarUrl(), alt, width="60px", height="60px")
          h1.profile-h-h !{user.username}
          //- p.profile-h-p
        .card.mt
          | They trusted us: 
          span.serv !{stats.guilds} servers
          p i 
            span.serv !{stats.users} users
      .col-12.col-lg-8
        if isAdmin
          .card
            h6
              i.fas.fa-star-of-life
              |    Server ban zone
            p.script Here you can remove and add server bans
            form(action='/admin/ban', method='GET')
              .form-group
                label Ban the server
                select.form-control(name="id", required)
                  option(hidden, value="") Please select from the list below
                  each server in toAddBan
                    option(value=server.id) #{server.name}
              button.btn.sub.btn-danger(type="submit") Save
            br
            form(action='/admin/ban', method='GET')
              .form-group
                label Unban the server
                select.form-control(name="id", required)
                  option(hidden, value="") Please select from the list below
                  each server in toRemoveBan
                    option(value=server.id) #{server.name || server.id}
              button.btn.sub.btn-danger(type="submit") Save
        .card
          h6
            i.far.fa-hdd
            |    Server list
          p.script You can see the server list here
          .row
            each server in servers
              +server(server)
